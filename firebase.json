{
  "hosting": {
    "public": "public",
    "ignore": [
      "**/node_modules/**",
      ".firebaserc",
      "firebase.json"
    ],
    "headers": [
      {
        "source" : "**/*.js",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      },
      {
        "source" : "**/*.woff2",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      }
    ]
  }
}