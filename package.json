{
  "version": "0.2.0",
  "name": "lapostoj-website",
  "description": "CV and Portfolio and Blog website for lapostoj",
  "main": "n/a",
  "scripts": {
    "build": "npm run clean:public && gatsby build",
    "clean:public": "rm -rf public && rm -rf .cache",
    "clean": "npm run clean:public",
    "deploy": "firebase deploy --token $FIREBASE_TOKEN",
    "lint": "eslint --cache --ext .js,.jsx --ignore-pattern public .",
    "lint:markdown": "markdownlint 'src/**/*.md'",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "start": "npm run clean:public && gatsby develop",
    "test": "echo \"Error: no test specified\" && exit 0",
    "prepare": "husky install"
  },
  "repository": "git+https://github.com/lapostoj/lapostoj.fr.git",
  "keywords": [
    "gatsby",
    "react",
    "lapostoj",
    "blog",
    "cv",
    "portfolio",
    "resume"
  ],
  "author": "lapostoj <jerome.lapostolet@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "gatsby": "^4.1.0",
    "gatsby-core-utils": "^3.1.2",
    "gatsby-plugin-catch-links": "^4.1.0",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-manifest": "^4.1.0",
    "gatsby-plugin-offline": "^5.1.0",
    "gatsby-plugin-react-helmet": "^5.1.0",
    "gatsby-plugin-sass": "^5.1.0",
    "gatsby-plugin-sharp": "^4.1.0",
    "gatsby-plugin-sitemap": "^5.1.0",
    "gatsby-remark-autolink-headers": "^5.1.0",
    "gatsby-remark-copy-linked-files": "^5.1.0",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^6.1.0",
    "gatsby-remark-prismjs": "^6.1.0",
    "gatsby-remark-responsive-iframe": "^5.1.0",
    "gatsby-remark-smartypants": "^5.1.0",
    "gatsby-source-filesystem": "^4.1.0",
    "gatsby-transformer-remark": "^5.1.0",
    "gatsby-transformer-sharp": "^4.1.0",
    "node-sass": "^6.0.1",
    "prismjs": "^1.25.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "markdownlint-cli": "^0.29.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --cache --ignore-pattern public"
    ],
    "src/**/*.md": [
      "markdownlint"
    ]
  },
  "browserslist": [
    "defaults",
    "not ie <= 11",
    "not op_mini all"
  ]
}
